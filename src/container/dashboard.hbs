<html>

  <head>
    <title>
      Dashboard page
    </title>
    <meta charset='utf-8' />

    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/fav/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/fav/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/fav/favicon-16x16.png'
    />
    <link rel='manifest' href='/fav/site.webmanifest' />
    <meta
      name='msapplication-TileColor'
      content='#da532c'
    />
    <meta name='theme-color' content='#ffffff' />

    <link href='css/normalize.css' rel='stylesheet' />

    <link href='css/dashboard.css' rel='stylesheet' />
  </head>

  <body>
    <div class='page page--dashboard'>
      <aside
        class='page__aside aside vertical vertical--big'
      >
        <div class='text aside__logo'>Sidebar</div>
        <nav class='vertical vertical-small'>
          <a
            href='#'
            class='nav-button nav-button--active click'
          >
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/home.svg');"
            ></span>
            <span class='text text--light'>Home</span>
          </a>

          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/orders.svg');"
            ></span>
            <span class='text text--light'>Orders</span>
          </a>

          <a href='#' class='nav-button click'>
            <span
              class='icon nav-button__icon'
              style="background-image: url('/svg/nav/products.svg');"
            ></span>
            <span class='text text--light'>Products</span>
          </a>
        </nav>
      </aside>

      <header class='header'>
        <div class='layout header__content text--small'>
          <div class='header__search relative'>
            <input
              type='text'
              placeholder='Search'
              class='text field field--header'
            />
            <span
              class='icon header__icon-search'
              style="background-image: url('/svg/header/search.svg');"
            ></span>
            <span
              class='icon icon--header-settings icon--button icon--color-blue-dark click'
              style="background-image: url('/svg/header/settings.svg');"
            ></span>
          </div>

          <div class='icon--group'>
            <span
              class='icon icon--button icon--color-yellow-light click'
              style="background-image: url('/svg/header/wifi.svg');"
            ></span>
            <span
              class='icon icon--button icon--color-blue-light click'
              style="background-image: url('/svg/header/china.svg');"
            ></span>
            <span
              class='icon icon--button icon--color-yellow-light click'
              style="background-image: url('/svg/header/bell.svg');"
            ></span>
          </div>
        </div>
      </header>

      <main class='main'>
        <div class='layout'>
          <section class='box analytic__block'>
            <div
              class='analytic analytic--double analytic--purple'
            >
              <span
                class='icon analytic__button icon--button icon--color-purple-dark click'
                style="background-image: url('/svg/analytic/earning.svg');"
              ></span>

              <div
                class='analytic__content relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >$500</div>
                <div
                  class='analytic__info text text--small text--lighter'
                >Total earning</div>
                <span
                  class='icon analytic__arrow'
                  style="background-image: url('/svg/analytic/purp-arrow.svg');"
                ></span>
              </div>
            </div>

            <div
              class='analytic analytic--double analytic--blue'
            >
              <span
                class='icon analytic__button icon--button icon--color-blue-dark click'
                style="background-image: url('/svg/analytic/order.svg');"
              ></span>

              <div
                class='analytic__content relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >$961</div>
                <div
                  class='analytic__info text text--small text--lighter'
                >Total Order</div>
              </div>
            </div>

            <div
              class='analytic analytic--row analytic--blue'
            >
              <span
                class='icon analytic__button icon--button icon--color-blue-dark click'
                style="background-image: url('/svg/analytic/earning.svg');"
              ></span>

              <div
                class='analytic__content relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--light'
                >$230k</div>
                <div
                  class='analytic__info text text--small text--lighter'
                >Total Income</div>
              </div>
            </div>

            <div
              class='analytic analytic--row analytic--stroke'
            >
              <span
                class='icon analytic__button icon--button icon--color-yellow-light click'
                style="background-image: url('/svg/analytic/income.svg');"
              ></span>

              <div
                class='analytic__content relative vertical vertical--small'
              >
                <div
                  class='analytic__title text text--black'
                >$230k</div>
                <div
                  class='analytic__info text text--small text--grey'
                >Total Income</div>
              </div>
            </div>
          </section>
        </div>

        <div class='main__money-block'>
          <section class='box main__purchase'>
            <div class='main-title'>Purchase list</div>
            <div class='divider'></div>
            <div class='purchase-item'>
              <div class='purchase-column'>
                <span class='purchase-text'>ID437661</span>
                <span class='purchase-text'>May 11, 2023,
                  14:21</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>AirOn ProCam</span>
                <span class='purchase-text'>7/8 USB Type-C</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>132.32 EUR</span>
                <span
                  class='purchase-text purchase-text--warning'
                >Not paid</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>Customer</span>
                <span
                  class='purchase-text'
                >robin@com.de</span>
              </div>
            </div>

            <div class='divider'></div>

            <div class='purchase-item'>
              <div class='purchase-column'>
                <span class='purchase-text'>ID437661</span>
                <span class='purchase-text'>May 11, 2023,
                  14:21</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>PHILIPS
                  Essential</span>
                <span class='purchase-text'>HD9200/90</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>543 USD</span>
                <span
                  class='purchase-text purchase-text--success'
                >Pay by Stripe</span>
              </div>
              <div class='purchase-column'>
                <span class='purchase-text'>Customer</span>
                <span
                  class='purchase-text'
                >dima@com.ua</span>
              </div>
            </div>
          </section>

          <section class='box main__payment'>
            <div class='main-title'>Payment</div>
            <div class='divider'></div>

            <div class='checkbox-group'>
              <div class='checkbox'>
                <input type="radio" class="radio checked"></input>
                <span class='checkbox--label'>Credit card</span>
              </div>

              <div class='checkbox'>
                <input type="radio"></input>
                <span class='checkbox--label'>Debit card</span>
              </div>

              <div class='checkbox'>
                <input type="radio"></input>
                <span class='checkbox--label'>Paypal</span>
              </div>
            </div>

            <div class='field-group'>
              <div>
                <span class='field--label'>Name on card</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span class='text text--dark'></span>
                  </div>
                </div>
              </div>

              <div>
                <span class='field--label'>Credit card
                  number</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span class='text text--dark'></span>
                  </div>
                </div>
              </div>

              <div>
                <span class='field--label'>Expiration</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span class='text text--dark'></span>
                  </div>
                </div>
              </div>

              <div>
                <span class='field--label'>CVV</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span class='text text--dark'></span>
                  </div>
                </div>
              </div>
            </div>

            <div class='divider'></div>

            <div class='field-group'>
              <div>
                <span class='field--label'>Country</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span
                      class='text text--dark'
                    >Choose...</span>
                    <span
                      class='icon icon--select-down'
                      style="background-image: url('/svg/select-down.svg');"
                    ></span>
                    <select
                      name=''
                      id=''
                      class='field__select'
                    ></select>
                  </div>
                </div>
              </div>

              <div>
                <span class='field--label'>State</span>
                <div class='field__block relative click'>
                  <div class='field field--select'>
                    <span
                      class='text text--dark'
                    >Choose...</span>
                    <span
                      class='icon icon--select-down'
                      style="background-image: url('/svg/select-down.svg');"
                    ></span>
                    <select
                      name=''
                      id=''
                      class='field__select'
                    ></select>
                  </div>
                </div>
              </div>
            </div>

            <div class='divider'></div>
            <button
              class='button nav-button nav-button--active'
            >Continue to checkout</button>
          </section>
        </div>
      </main>
    </div>
  </body>

</html>