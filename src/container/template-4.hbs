<header class='header row g-0'>
    <div class='col-3'>
        {{> logo}}
    </div>

    <nav class='header_nav col-9'>
        <div class='header_nav_right'>
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}} </h1>
        <p class="main_text">{{description}} </p>
        <a href="{{href}}" class="button main_button">{{button}} </a>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
        {{>cardFeatured data=this}}
    {{/each}}
</main>

{{#with actions}}
<div class="action">
    {{#each this}}
    <div class="action_content">
        <h3 class="action_title">{{heading}} </h3>
        <div class="action_action">
            <a href="{{url}}" class="button action_button">{{text}} </a>
        </div>
    </div>
    {{/each}}
</div>
{{/with}}

<footer class="row footer">
    <div class='col-3'>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023</span>
    </div>

    {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}} </span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>